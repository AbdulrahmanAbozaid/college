<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quiz_app.Login">
   <children>
      <Label alignment="CENTER" layoutX="149.0" layoutY="26.0" prefHeight="54.0" prefWidth="301.0" text="Login to QuizApp" textFill="#3b85b4">
         <font>
            <Font name="System Bold" size="34.0" />
         </font>
      </Label>
      <Label layoutX="162.0" layoutY="145.0" prefHeight="29.0" prefWidth="71.0" text="Name:" textFill="#0c1d7b">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="name" layoutX="233.0" layoutY="140.0" prefHeight="26.0" prefWidth="206.0" promptText="ex: John Doe">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Label layoutX="162.0" layoutY="200.0" prefHeight="29.0" prefWidth="71.0" text="Account:" textFill="#0f0b4e">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <RadioButton fx:id="instructor" layoutX="252.0" layoutY="206.0" mnemonicParsing="false" text="Instructor">
         <toggleGroup>
            <ToggleGroup fx:id="account" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="student" layoutX="336.0" layoutY="206.0" mnemonicParsing="false" text="Student" toggleGroup="$account" />
      <Button fx:id="login" layoutX="258.0" layoutY="307.0" mnemonicParsing="false" onAction="#login" prefHeight="38.0" prefWidth="84.0" styleClass="btn" stylesheets="@styles.css" text="Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
